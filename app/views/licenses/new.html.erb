<h1>New license</h1>

<%= form_for(@license) do |f| %>

  <%= error_messages @license %>

  <div class="field">
    <%= f.label :client %><br />
    <%= collection_select(:license, :client_id, current_user.distributor.clients,  :id, :name, {:prompt   => "Select a client"}, {:id => "clients_select", "data-url" => update_computers_licenses_path}) %>
  </div>
  <div class="field">
    <%= f.label :computer_id %><br />
    <%= collection_select(:license, :computer_id, @computers, :id, :name, {:prompt   => "Select a computer"}) %>
  </div>
  <div class="field">
    <%= f.label :application_id %><br />
    <%= collection_select(:license, :application_id, Application.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :sitecode %><br />
    <%= f.text_field :sitecode, :size => 8 %>
  </div>
  <div class="field">
    <%= f.label :mid %><br />
    <%= f.text_field :mid, :size => 19 %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes, :size => "40x4" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', licenses_path %>
