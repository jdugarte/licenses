<h1>Transfer license</h1>

<p>
  <b>Client: </b>
  <%= link_to @license.computer.client.name, @license.computer.client %>
</p>
<p>
  <b>Aplication: </b>
  <%= @license.application.name %>
</p>

<%= form_for(@license, :url => transfer_path) do |f| %>

  <%= error_messages @license %>

  <div class="field">
    <%= f.label :removal_code %><br />
    <%= f.text_field :removal_code, :size => 8 %>
  </div>
  <div class="field">
    <%= f.label :computer_id %><br />
    <%= collection_select(:license, :computer_id, @license.computer.client.computers, :id, :name, {:prompt   => "Select a computer"}) %>
  </div>
  <div class="field">
    <%= f.label :sitecode %><br />
    <%= f.text_field :sitecode, :size => 8 %>
  </div>
  <div class="field">
    <%= f.label :mid %><br />
    <%= f.text_field :mid, :size => 19 %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes, :size => "40x4" %>
  </div>
  <div class="actions">
    <%= f.submit "Transfer License" %>
  </div>
<% end %>

<%= link_to 'Show', @license %> |
<%= link_to 'Back', licenses_path %>
